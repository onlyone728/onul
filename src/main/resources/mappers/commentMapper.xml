<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.onul.comment.dao.CommentDAO">
	<insert id="addComment" parameterType="map">
		INSERT INTO `comment`
		(
			`userId`
			, `nickName`
			, `profileImage`
			, `postType`
			, `postId`
			, `content`
			, `createdAt`
			, `updatedAt`
		)	
		VALUES
		(
			#{userId}
			, #{nickName}
			, #{profileImage}
			, #{postType}
			, #{postId}
			, #{content}
			, NOW()
			, NOW()
		)
	</insert> 
	
	<select id="selectCommentListByPostTypeAndPostId" parameterType="map" resultType="com.onul.comment.model.Comment">
		SELECT
			`id`
			, `userId`
			, `nickName`
			, `profileImage`
			, `postType`
			, `postId`
			, `content`
			, `createdAt`
			, `updatedAt`
		FROM
			`comment`
		WHERE
			`postType` = #{postType}
			AND `postId` = #{postId}
		ORDER BY `id` DESC		
	</select>
	
	<select id="commentCount" parameterType="map" resultType="int">
		SELECT
			count(*)
		FROM
			`comment`
		WHERE
			`postType` = #{postType}
			AND `postId` = #{postId}		
	</select>
 </mapper>