<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.onul.knowhowPost.dao.KnowhowDAO">
 	<select id="selectKnowhowOrderByHit" resultType="com.onul.knowhowPost.model.Knowhow">
 		SELECT
 			`id`
			, `userId`
			, `nickName`
			, `profileImage`
			, `postType`
			, `category`
			, `subject`
			, `content`
			, `coverImage`
			, `hit`
			, `createdAt`
			, `updatedAt`
		FROM
			`knowhow`
		ORDER BY `hit` DESC
		LIMIT 4
 	</select>
 	
 	<insert id="insertKnowhow" parameterType="com.onul.knowhowPost.model.Knowhow" useGeneratedKeys="true" keyProperty="id">
 		INSERT INTO `knowhow`
 		(
 			`userId`
			, `nickName`
			, `profileImage`
			, `postType`
			, `category`
			, `subject`
			, `content`
			, `coverImage`
			, `createdAt`
			, `updatedAt`
 		)
 		VALUES
 		(
 			#{userId}
 			, #{nickName}
 			, #{profileImage}
 			, #{postType}
 			, #{category}
 			, #{subject}
 			, #{content}
 			, #{coverImage}
 			, NOW()
 			, NOW()
 		)
 	</insert>
 	
 	<delete id="deleteKnowhowById" parameterType="int">
 		DELETE FROM `knowhow`
 		WHERE
 			`id` = #{id}
 	</delete>
 	
 	<select id="selectKnowhowById" parameterType="int" resultType="com.onul.knowhowPost.model.Knowhow">
 		SELECT
 			`id`
 			, `userId`
			, `nickName`
			, `profileImage`
			, `postType`
			, `category`
			, `subject`
			, `content`
			, `coverImage`
			, `createdAt`
			, `updatedAt`
		FROM	
 			`knowhow`
 		WHERE
 			`id` = #{id}	
 	</select>
 	
 	<select id="selectKnowhowList" resultType="com.onul.knowhowPost.model.Knowhow">
 		SELECT
 			`id`
 			, `userId`
			, `nickName`
			, `profileImage`
			, `postType`
			, `category`
			, `subject`
			, `content`
			, `coverImage`
			, `createdAt`
			, `updatedAt`
		FROM	
 			`knowhow`
 		ORDER BY `id` DESC	
 	</select>
 	
 	<select id="selectKnowhowListByUserId" parameterType="int" resultType="com.onul.knowhowPost.model.Knowhow">
 		SELECT
 			`id`
 			, `userId`
			, `nickName`
			, `profileImage`
			, `postType`
			, `category`
			, `subject`
			, `content`
			, `coverImage`
			, `createdAt`
			, `updatedAt`
		FROM	
 			`knowhow`
 		WHERE
 			`userId` = #{userId}	
 		ORDER BY `id` DESC
 	</select>
 	
 	<update id="updateHit" parameterType="int">
 		UPDATE 
 			`knowhow`
 		SET
 			`hit` = hit + 1
 		WHERE
 			`id` = #{id}		
 	</update>
 </mapper>