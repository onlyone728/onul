<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.onul.introduceHousePost.dao.IntroduceHouseDAO">
 	<select id="selectIntroduceListOrderByHit" resultType="com.onul.introduceHousePost.model.IntroduceHouse">
 		SELECT
 			`id`
			, `userId`
			, `nickName`
			, `profileImage`
			, `postType`
			, `type`
			, `area`
			, `familyType`
			, `fieldOfWork`
			, `worker`
			, `subject`
			, `content`
			, `coverImage`
			, `hit`
			, `createdAt`
			, `updatedAt`
		FROM
			`introduceHouse`
		ORDER BY `hit` DESC
		LIMIT 4		
 	</select>
 	
 	<insert id="insertIntroduceHouse" parameterType="com.onul.introduceHousePost.model.IntroduceHouse" useGeneratedKeys="true" keyProperty="id">
 		INSERT INTO `introduceHouse`
 		(
			`userId`
			, `nickName`
			, `profileImage`
			, `postType`
			, `type`
			, `area`
			, `familyType`
			, `fieldOfWork`
			, `worker`
			, `subject`
			, `content`
			, `coverImage`
			, `createdAt`
			, `updatedAt` 		
 		)
 		VALUES
 		(
 			#{userId}
 			, #{nickName}
 			, #{profileImage}
 			, #{postType}
 			, #{type}
 			, #{area}
 			, #{familyType}
 			, #{fieldOfWork}
 			, #{worker}
 			, #{subject}
 			, #{content}
 			, #{coverImage}
 			, NOW()
 			, NOW()
 		)
 	</insert>
 	
 	<delete id="deleteIntroduceHouseByPostId" parameterType="int">
 		DELETE 
 		FROM 
 			`introduceHouse`
 		WHERE
 			`postId` = #{postId}
 	</delete>
 	
 	<select id="selectIntroduceHouseById" resultType="com.onul.introduceHousePost.model.IntroduceHouse">
 		SELECT
 			`id`
			, `userId`
			, `nickName`
			, `profileImage`
			, `postType`
			, `type`
			, `area`
			, `familyType`
			, `fieldOfWork`
			, `worker`
			, `subject`
			, `content`
			, `coverImage`
			, `hit`
			, `createdAt`
			, `updatedAt`
		FROM
			`introduceHouse`
		WHERE
			`id` = #{id}		
 	</select>
 	
 	<select id="selectIntroduceHouseListByUserId" parameterType="int" resultType="com.onul.introduceHousePost.model.IntroduceHouse">
 		SELECT
 			`id`
			, `userId`
			, `nickName`
			, `profileImage`
			, `postType`
			, `type`
			, `area`
			, `familyType`
			, `fieldOfWork`
			, `worker`
			, `subject`
			, `content`
			, `coverImage`
			, `hit`
			, `createdAt`
			, `updatedAt`
		FROM
			`introduceHouse`
		WHERE
			`userId` = #{userId}	
		ORDER BY `id` DESC	
 	</select>
 	
 	<select id="selectIntroduceHouseList" resultType="com.onul.introduceHousePost.model.IntroduceHouse">
 		SELECT
 			`id`
			, `userId`
			, `nickName`
			, `profileImage`
			, `postType`
			, `type`
			, `area`
			, `familyType`
			, `fieldOfWork`
			, `worker`
			, `subject`
			, `content`
			, `coverImage`
			, `hit`
			, `createdAt`
			, `updatedAt`
		FROM
			`introduceHouse`
		ORDER BY `id` DESC	
 	</select>
 	
 	<update id="updateHit" parameterType="int">
 		UPDATE 
 			`introduceHouse`
 		SET
 			`hit` = hit + 1
 		WHERE
 			`id` = #{id}		
 	</update>
 </mapper>